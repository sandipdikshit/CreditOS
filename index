<!-- TOAST CONTAINER -->
<div class="toast-stack" id="toastStack"></div>

<script>
  // Navigation
  function nav(screen, el) {
    document.querySelectorAll('.screen').forEach(s => s.classList.remove('active'));
    document.querySelectorAll('.nav-item').forEach(n => n.classList.remove('active'));

    document.getElementById('screen-' + screen).classList.add('active');

    if (el) {
      el.classList.add('active');
    } else {
      // find matching nav item
      const items = document.querySelectorAll('.nav-item');
      items.forEach(item => {
        if (item.getAttribute('onclick') && item.getAttribute('onclick').includes("'" + screen + "'")) {
          item.classList.add('active');
        }
      });
    }
  }

  // Slider helpers
  function updateSim(el, targetId, formatter) {
    document.getElementById(targetId).textContent = formatter(el.value);
    recalcSim();
  }

  function updateSimRaw(el, targetId) {
    const labels = ['','Very Low (0.08)','Low (0.18)','Moderate (0.38)','High (0.61)','Very High (0.84)','Extreme (0.97)','','','',''];
    document.getElementById(targetId).textContent = labels[el.value] || el.value;
    recalcSim();
  }

  function updateScenario(el) {
    const labels = ['','Base','Moderate Stress','High Stress'];
    document.getElementById('market-val').textContent = labels[el.value] || el.value;
    recalcSim();
  }

  function recalcSim() {
    // Simple fake recalculation
    const results = ['â‚¹3.2L','â‚¹3.8L','â‚¹4.1L','â‚¹2.9L','â‚¹3.5L'];
    const r = results[Math.floor(Math.random() * results.length)];
    document.getElementById('sim-result').textContent = r;
  }

  // Toast system
  let toastCount = 0;
  function showToast(title, body, type) {
    const stack = document.getElementById('toastStack');
    const toast = document.createElement('div');
    toast.className = 'toast t-' + (type || 'blue');
    toast.innerHTML = '<div class="toast-title">' + title + '</div><div class="toast-body">' + body + '</div>';
    stack.appendChild(toast);

    setTimeout(() => {
      toast.style.animation = 'slideIn 0.3s ease reverse';
      setTimeout(() => toast.remove(), 300);
    }, 3000);
  }

  // Auto-fire a toast on load
  setTimeout(() => showToast('ğŸš¨ New Stress Flag','BRW-9928 just crossed pre-delinquency threshold','red'), 1500);
  setTimeout(() => showToast('ğŸ“Š Portfolio Update','MH-West confidence improved to 83.4','green'), 4000);

  // Filter button behavior
  document.querySelectorAll('.filter-btn').forEach(btn => {
    btn.addEventListener('click', function() {
      const siblings = this.parentElement.querySelectorAll('.filter-btn');
      siblings.forEach(s => s.classList.remove('active'));
      this.classList.add('active');
    });
  });

  // Seg tab behavior
  document.querySelectorAll('.seg-tab').forEach(tab => {
    tab.addEventListener('click', function() {
      const siblings = this.parentElement.querySelectorAll('.seg-tab');
      siblings.forEach(s => s.classList.remove('active'));
      this.classList.add('active');
    });
  });
</script>
</body>
